<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-3">

            <h2>Edit a Movie</h2>
            <hr>

            <form action="/Movies/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value=" {{title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{plot}}">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Select Celebrities Cast</label>
                    <select class="form-selectMany" name="cast" id="cast" multiple>
                        {{#each celebrities}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Edit your Movie</button>
                </div>

            </form>
        </div>
    </div>
</div>